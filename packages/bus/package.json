{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/bus",
  "title": "Accelint Bus",
  "description": "An open-source event bus library.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/bus",
  "version": "1.4.0",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./*": {
      "import": {
        "types": "./dist/*/index.d.ts",
        "default": "./dist/*/index.js"
      },
      "default": "./dist/*/index.js"
    }
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsup",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/bus",
    "lint": "pnpm biome lint",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/core": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "19.1.13",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "react": "19.0.0",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vitest": "^2.1.9",
    "vitest-broadcast-channel-mock": "^0.1.0"
  },
  "peerDependencies": {
    "@accelint/core": "workspace:*",
    "typescript": "5.8.3"
  },
  "optionalDependencies": {
    "react": "19.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
