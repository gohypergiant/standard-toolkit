{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/bus",
  "title": "Accelint Bus",
  "description": "An open-source event bus library.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/bus",
  "version": "3.0.0",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./broadcast": "./dist/broadcast/index.js",
    "./broadcast/constants": "./dist/broadcast/constants.js",
    "./broadcast/types": "./dist/broadcast/types.js",
    "./react": "./dist/react/index.js",
    "./react/ponyfill": "./dist/react/ponyfill.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsdown",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/bus",
    "lint": "pnpm biome lint",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch"
  },
  "dependencies": {
    "type-fest": "^5.3.1"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/core": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19",
    "react": "^19",
    "tsdown": "^0.17.3",
    "type-fest": "^5.3.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "@accelint/core": "workspace:*"
  },
  "optionalDependencies": {
    "react": "19.0.0"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
