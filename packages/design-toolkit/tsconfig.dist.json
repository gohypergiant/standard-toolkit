{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@accelint/typescript-config/tsc/dom/library",
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/*.bench.ts",
    "**/*.css",
    "**/*.module.css",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.test-d.ts",
    "./scripts/**",
    ".storybook/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["css-modules", "node"]
  }
}
