{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@accelint/typescript-config/tsc/dom/library",
  "include": ["./src", "./.storybook/*.tsx"],
  "exclude": [
    "node_modules",
    "**/*.bench.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.test-d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  }
}
