{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/design-toolkit",
  "title": "Design Toolkit",
  "description": "An open-source component library to serve as part of the entire ecosystem of UX for Accelint.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "design-tk",
    "tooling",
    "ui"
  ],
  "subPath": "packages/design-toolkit",
  "version": "8.1.1",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      },
      "default": "./dist/*.js"
    },
    "./hooks/*": {
      "import": {
        "types": "./dist/hooks/*.d.ts",
        "default": "./dist/hooks/*.js"
      },
      "default": "./dist/hooks/*.js"
    },
    "./lib/*": {
      "import": {
        "types": "./dist/lib/*.d.ts",
        "default": "./dist/lib/*.js"
      },
      "default": "./dist/lib/*.js"
    },
    "./providers/*": {
      "import": {
        "types": "./dist/providers/*.d.ts",
        "default": "./dist/providers/*.js"
      },
      "default": "./dist/providers/*.js"
    },
    "./styles": {
      "import": {
        "default": "./dist/index.module.css"
      },
      "default": "./dist/index.module.css"
    }
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm format && tsup",
    "build-storybook": "pnpm storybook build",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "format": "pnpm format:biome && pnpm format:prettier",
    "format:biome": "pnpm biome format . --write",
    "format:prettier": "prettier --write .",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/design-toolkit",
    "lint": "pnpm biome lint",
    "preview": "pnpm storybook dev -p 6006",
    "preview:docs": "pnpm storybook dev --docs -p 6006",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "string-hash": "^1.1.3"
  },
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/bus": "workspace:*",
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/core": "workspace:*",
    "@accelint/design-foundation": "workspace:*",
