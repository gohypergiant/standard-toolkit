{
  "extends": [
    "@hypergiant/biome-config/analyzer",
    "@hypergiant/biome-config/formatter",
    "@hypergiant/biome-config/linter"
  ],
  "files": {
    "include": ["**/*.js", "**/*.mjs", "**/*.ts", "**/*.tsx", "**/*.json"],
    "ignore": ["node_modules", ".turbo", "dist", "coverage"]
  },
  "linter": {
    "rules": {
      "style": {
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false,
            "requireAscii": true
          }
        },
        "noParameterAssign": {
          "level": "warn"
        }
      }
    }
  }
}
