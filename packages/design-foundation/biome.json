{
  "root": false,
  "extends": "//",
  "linter": {
    "rules": {
      "style": {
        "noParameterAssign": {
          "level": "warn"
        }
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": ["classList"],
            "functions": ["tv", "twMerge"]
          }
        }
      }
    }
  },
  "css": {
    "formatter": {
      "enabled": false
    }
  }
}
