{
  "name": "@accelint/design-foundation",
  "description": "An open-source design library to serve as part of the entire ecosystem of UX for Accelint.",
  "version": "1.0.2",
  "author": "https://hypergiant.com",
  "$schema": "https://json.schemastore.org/package",
  "dependencies": {
    "string-hash": "^1.1.3"
  },
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/prettier-config": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@fontsource-variable/roboto-flex": "^5.2.8",
    "@fontsource-variable/roboto-mono": "^5.2.8",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^22",
    "@types/string-hash": "^1.1.3",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^4.1.18",
    "tinyglobby": "^0.2.15",
    "tsdown": "^0.18.0",
    "typescript": "^5.9.3",
    "uuid": "^11.1.0",
    "vite": "^7.2.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "webpack": "^5.103.0"
  },
  "exports": {
    "./lib/css": "./dist/lib/css.js",
    "./lib/utils": "./dist/lib/utils.js",
    "./lib/vite": "./dist/lib/vite.js",
    "./lib/webpack": "./dist/lib/webpack.js",
    "./tokens": "./dist/tokens/index.js",
    "./tokens/types": "./dist/tokens/types.js",
    "./package.json": "./package.json",
    "./styles": "./dist/index.css"
  },
  "files": [
    "./dist/**",
    "./catalog-info.yaml"
  ],
  "keywords": [
    "design-foundation",
    "tooling",
    "ui"
  ],
  "license": "Apache-2.0",
  "optionalDependencies": {
    "vite": "^7.2.7",
    "webpack": "^5.103.0"
  },
  "owner": "default/pathfinder",
  "peerDependencies": {
    "@fontsource-variable/roboto-flex": "^5.2.8",
    "@fontsource-variable/roboto-mono": "^5.2.8",
    "clsx": "^2.1.1",
    "tailwindcss": "^4.1.18"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "scripts": {
    "build": "pnpm generate && pnpm tsdown",
    "constellation-tracker": "pnpm exec constellation-tracker",
    "dev": "pnpm tsc --watch",
    "format": "pnpm format:biome && pnpm format:prettier",
    "format:biome": "pnpm biome format . --write --verbose",
    "format:biome:dry": "pnpm biome format . --verbose",
    "format:check": "pnpm format:biome:dry && pnpm format:prettier:dry",
    "format:prettier": "pnpm prettier --write .",
    "format:prettier:dry": "pnpm prettier --check .",
    "gen:tokens": "pnpm zx scripts/generate-tokens.mjs",
    "gen:variants": "node scripts/generate-variants.mjs",
    "generate": "pnpm gen:tokens && pnpm gen:variants && pnpm run format",
    "license": "pnpm zx ../../scripts/license.mjs",
    "lint": "pnpm biome lint . --verbose",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch"
  },
  "subPath": "packages/design-foundation",
  "title": "Design Foundation",
  "type": "module",
  "types": "./dist/index.d.ts"
}
