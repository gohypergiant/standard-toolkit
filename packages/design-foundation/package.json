{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/design-foundation",
  "title": "Design Foundation",
  "description": "An open-source design library to serve as part of the entire ecosystem of UX for Accelint.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "design-foundation",
    "tooling",
    "ui"
  ],
  "subPath": "packages/design-foundation",
  "version": "0.0.0",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      },
      "default": "./dist/*.js"
    },
    "./styles": {
      "import": {
        "default": "./dist/index.css"
      },
      "default": "./dist/index.css"
    }
  },
  "scripts": {
    "build": "pnpm generate && pnpm license && pnpm format && tsup",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "format": "pnpm biome format . --write",
    "gen:tokens": "pnpm zx scripts/generate-tokens.mjs",
    "gen:variants": "node scripts/generate-variants.mjs",
    "generate": "pnpm gen:tokens && pnpm gen:variants",
    "license": "pnpm license:tokens && pnpm license:variants",
    "license:tokens": "pnpm zx ../../scripts/license.mjs --files ./src/tokens",
    "license:variants": "pnpm zx ../../scripts/license.mjs --files ./src/variants",
    "lint": "pnpm biome lint",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch"
  },
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@fontsource-variable/roboto-flex": "^5.2.8",
    "@fontsource-variable/roboto-mono": "^5.2.8",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.9.0",
    "autoprefixer": "^10.4.21",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "glob": "^11.0.3",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.0.1",
    "tailwindcss": "^4.1.11",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "uuid": "^11.1.0",
    "vite": "^5.4.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "@fontsource-variable/roboto-flex": "^5.2.8",
    "@fontsource-variable/roboto-mono": "^5.2.8",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.0.1",
    "tailwindcss": "^4.1.11"
  },
  "publishConfig": {
    "access": "public"
  }
}
