{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/ntds",
  "title": "Accelint NTDS",
  "description": "An NTDS-compliant offering of a set of SVG Icon Components with fill color inputs for general usage, and a spritesheet for icons to be used in the COP.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/ntds",
  "version": "0.2.3",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./constants": "./dist/constants.js",
    "./core": "./dist/core/index.js",
    "./core/air-base-friend": "./dist/core/air-base-friend.js",
    "./core/air-base-hostile": "./dist/core/air-base-hostile.js",
    "./core/air-base-unknown": "./dist/core/air-base-unknown.js",
    "./core/air-friend": "./dist/core/air-friend.js",
    "./core/air-group-friend": "./dist/core/air-group-friend.js",
    "./core/air-group-hostile": "./dist/core/air-group-hostile.js",
    "./core/air-group-unknown": "./dist/core/air-group-unknown.js",
    "./core/air-hostile": "./dist/core/air-hostile.js",
    "./core/air-unknown": "./dist/core/air-unknown.js",
    "./core/base-friend": "./dist/core/base-friend.js",
    "./core/base-hostile": "./dist/core/base-hostile.js",
    "./core/base-unknown": "./dist/core/base-unknown.js",
    "./core/carrier-friend": "./dist/core/carrier-friend.js",
    "./core/carrier-hostile": "./dist/core/carrier-hostile.js",
    "./core/carrier-unknown": "./dist/core/carrier-unknown.js",
    "./core/communications": "./dist/core/communications.js",
    "./core/helicopter-friend": "./dist/core/helicopter-friend.js",
    "./core/helicopter-hostile": "./dist/core/helicopter-hostile.js",
    "./core/helicopter-unknown": "./dist/core/helicopter-unknown.js",
    "./core/land-friend": "./dist/core/land-friend.js",
    "./core/land-hostile": "./dist/core/land-hostile.js",
    "./core/land-unknown": "./dist/core/land-unknown.js",
    "./core/mine-field": "./dist/core/mine-field.js",
    "./core/missile-friend": "./dist/core/missile-friend.js",
    "./core/missile-hostile": "./dist/core/missile-hostile.js",
    "./core/missile-unknown": "./dist/core/missile-unknown.js",
    "./core/pol": "./dist/core/pol.js",
    "./core/port": "./dist/core/port.js",
    "./core/runway": "./dist/core/runway.js",
    "./core/sam": "./dist/core/sam.js",
    "./core/structure": "./dist/core/structure.js",
    "./core/sub-group-friend": "./dist/core/sub-group-friend.js",
    "./core/sub-group-hostile": "./dist/core/sub-group-hostile.js",
    "./core/sub-group-unknown": "./dist/core/sub-group-unknown.js",
    "./core/sub-surface-friend": "./dist/core/sub-surface-friend.js",
    "./core/sub-surface-hostile": "./dist/core/sub-surface-hostile.js",
    "./core/sub-surface-unknown": "./dist/core/sub-surface-unknown.js",
    "./core/surface-friend": "./dist/core/surface-friend.js",
    "./core/surface-group-friend": "./dist/core/surface-group-friend.js",
    "./core/surface-group-hostile": "./dist/core/surface-group-hostile.js",
    "./core/surface-group-unknown": "./dist/core/surface-group-unknown.js",
    "./core/surface-hostile": "./dist/core/surface-hostile.js",
    "./core/surface-unknown": "./dist/core/surface-unknown.js",
    "./core/target": "./dist/core/target.js",
    "./core/torpedo-friend": "./dist/core/torpedo-friend.js",
    "./core/torpedo-hostile": "./dist/core/torpedo-hostile.js",
    "./core/torpedo-unknown": "./dist/core/torpedo-unknown.js",
    "./spritesheets/masked": "./dist/spritesheets/masked.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm run build:icons:color && pnpm run build:icons:masked && pnpm run format && pnpm run license && pnpm tsdown && pnpm copy",
    "build:icons:color": "smeegl --in ./icons/core --out ./src/core --target REACT",
    "build:icons:masked": "smeegl --in ./icons/masked --out ./src/spritesheets/masked --crc DEC --target SPRITESHEET",
    "constellation-tracker": "constellation-tracker",
    "copy": "pnpm copy:spritesheets",
    "copy:spritesheets": "pnpm exec cp -pR ./src/spritesheets/*.png ./src/spritesheets/*.json ./dist/spritesheets",
    "dev": "pnpm tsc --watch",
    "format": "pnpm biome check --linter-enabled=false . --write",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/ntds",
    "license": "pnpm zx ../../scripts/license.mjs --files src",
    "lint": "pnpm biome lint"
  },
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/smeegl": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19",
    "react-dom": "^19",
    "tsdown": "^0.17.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
