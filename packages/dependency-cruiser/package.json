{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/dependency-cruiser",
  "author": "https://hypergiant.com",
  "version": "0.0.0",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "dist/**"
  ],
  "main": "src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm run format && pnpm run license && pnpm tsup",
    "dev": "pnpm tsc --watch",
    "format": "pnpm biome check --linter-enabled=false . --write",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/dependency-cruiser",
    "license": "pnpm zx ../../scripts/license.mjs --files src",
    "license:initial": "pnpm zx ../../scripts/license.mjs",
    "lint": "pnpm biome lint"
  },
  "dependencies": {},
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@types/node": "^24.9.0",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "tsup": "8.5.0",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
