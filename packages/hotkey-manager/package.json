    "./types/hotkey-hook": "./dist/types/hotkey-hook/index.js",
    "./types/hotkey-id": "./dist/types/hotkey-id/index.js",
    "./types/hotkey-options": "./dist/types/hotkey-options/index.js",
    "./types/key-combination": "./dist/types/key-combination/index.js",
    "./types/key-combination-id": "./dist/types/key-combination-id/index.js",
    "./types/key-option": "./dist/types/key-option/index.js",
    "./types/non-empty-array": "./dist/types/non-empty-array/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsdown",
    "dev": "pnpm tsc --watch",
    "lint": "pnpm biome lint",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "radashi": "^12.6.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/core": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19",
    "happy-dom": "^19.0.2",
    "react": "^19",
    "tsdown": "^0.17.3",
    "type-fest": "^5.3.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "react": "^19.0.0"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
