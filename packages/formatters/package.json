{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/formatters",
  "title": "Accelint Formatters",
  "description": "A set of useful formatting functions for enhancing readability and consistency in your applications.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/formatters",
  "version": "0.1.7",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./*": {
      "import": {
        "types": "./dist/*/index.d.ts",
        "default": "./dist/*/index.js"
      },
      "default": "./dist/*/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsup",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/formatters",
    "lint": "pnpm biome lint"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vitest": "^2.1.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
