{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/converters",
  "title": "Accelint Converters",
  "description": "A lightweight JavaScript utility for converting between various value types, including numbers, strings, booleans, dates, and more.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/converters",
  "version": "0.3.4",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./azimuth-to-cardinal": "./dist/azimuth-to-cardinal/index.js",
    "./boolean-to-number": "./dist/boolean-to-number/index.js",
    "./to-boolean": "./dist/to-boolean/index.js",
    "./zxy-to-bbox": "./dist/zxy-to-bbox/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsdown",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/converters",
    "lint": "pnpm biome lint",
    "test": "pnpm vitest --dir=src"
  },
  "devDependencies": {
    "@accelint/constants": "workspace:*",
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "tsdown": "^0.17.2",
    "typescript": "5.8.3",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "@accelint/constants": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "sideEffects": false
}
