{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/worker",
  "title": "Accelint Worker",
  "description": "A lightweight JavaScript library that simplifies working with Web Workers.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/web-worker",
  "version": "0.1.4",
  "private": false,
  "license": "Apache-2.0",
  "repository": "gohypergiant/standard-toolkit",
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsup",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/web-worker",
    "lint": "pnpm biome lint"
  },
  "dependencies": {
    "mitt": "^3.0.1",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "tsup": "8.5.0",
    "vitest": "^2.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
