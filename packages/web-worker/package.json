{
  "name": "@accelint/worker",
  "description": "A lightweight JavaScript library that simplifies working with Web Workers.",
  "version": "0.1.6",
  "author": "https://hypergiant.com",
  "$schema": "https://json.schemastore.org/package",
  "dependencies": {
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "tsdown": "^0.18.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "exports": {
    ".": "./dist/index.js",
    "./worker": "./dist/worker/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "owner": "default/pathfinder",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsdown",
    "constellation-tracker": "pnpm exec constellation-tracker",
    "dev": "pnpm tsc --watch",
    "format": "pnpm biome format . --write --verbose",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/web-worker",
    "lint": "pnpm biome lint . --verbose"
  },
  "sideEffects": false,
  "subPath": "packages/web-worker",
  "title": "Accelint Worker",
  "type": "module",
  "types": "./dist/index.d.ts"
}
