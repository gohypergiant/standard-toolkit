{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/logger",
  "title": "Accelint Logger",
  "description": "A flexible and extensible logging utility with callsite tracking and environment-aware capabilities.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/logger",
  "version": "0.1.2",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./default": "./dist/default/index.js",
    "./plugins/callsite": "./dist/plugins/callsite.js",
    "./plugins/environment": "./dist/plugins/environment.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsdown",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/logger",
    "lint": "pnpm biome lint",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch"
  },
  "dependencies": {
    "@loglayer/plugin": "^2.2.1",
    "@loglayer/transport": "^2.2.1",
    "@loglayer/transport-simple-pretty-terminal": "^2.2.1",
    "callsites": "^4.2.0",
    "serialize-error": "^12.0.0"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "loglayer": "^6.10.0",
    "tsdown": "^0.17.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "loglayer": "^6.10.0"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
