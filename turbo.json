{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["index"]
    },
    "lint": {},
    "bench": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage"]
    },
    "test:browser": {
      "dependsOn": ["build"],
      "cache": false
    },
    "index": {
      "outputs": ["src/index.ts"]
    },
    "build": {
      "dependsOn": ["index", "^build"],
      "outputs": ["dist", "build"]
    },
    "constellation-tracker": {
      "cache": false,
      "dependsOn": ["build", "^constellation-tracker"]
    }
  }
}
