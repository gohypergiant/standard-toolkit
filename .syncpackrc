{
  "$schema": "./node_modules/syncpack/dist/schema.json",
  "formatRepository": true,
  "formatBugs": true,
  "semverGroups": [
    {
      "dependencies": [
        "**",
        "!@deck.gl/**"
      ],
      "label": "By default all packages start with minor semver range",
      "packages": [
        "**"
      ],
      "range": "^"
    },
    {
      "dependencies": [
        "@deck.gl/**"
      ],
      "label": "Packages that require patch semver range due to issues",
      "packages": [
        "**"
      ],
      "range": "~"
    }
  ],
  "versionGroups": [
    {
      "dependencies": [
        "@accelint/**"
      ],
      "label": "Use workspace:* for workspace packages",
      "packages": [
        "**"
      ],
      "pinVersion": "workspace:*"
    },
    {
      "dependencies": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "label": "Ensure React & React DOM are within the same range across project",
      "policy": "sameRange"
    },
    {
      "dependencies": ["@deck.gl/**"],
      "label": "Ensure Deck.glare within the same range across project",
      "policy": "sameRange"
    }
  ]
}
