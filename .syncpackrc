{
  "$schema": "./node_modules/syncpack/dist/schema.json",
  "formatRepository": true,
  "formatBugs": true,
  "semverGroups": [
    {
      "dependencies": [
        "**",
        "!@deck.gl/**",
        "!@react-aria/**",
        "!react-aria-components"
      ],
      "label": "By default all packages have minor semver range",
      "packages": [
        "**"
      ],
      "range": "^"
    },
    {
      "dependencies": [
        "@deck.gl/**",
        "@react-aria/**",
        "react-aria-components"
      ],
      "label": "Packages that require patch semver range due to issues",
      "packages": [
        "**"
      ],
      "range": "~"
    }
  ],
  "versionGroups": [
    {
      "dependencies": [
        "@accelint/**"
      ],
      "label": "Use workspace:* for workspace packages",
      "packages": [
        "**"
      ],
      "pinVersion": "workspace:*"
    },
    {
      "dependencies": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "label": "Ensure React packages are within the same range across project",
      "pinVersion": "^19"
    },
    {
      "dependencies": ["@deck.gl/**"],
      "label": "Ensure Deck.gl packages are within the same range across project",
      "pinVersion": "~9.1"
    },
    {
      "dependencies": ["@react-aria/**", "react-aria-components"],
      "label": "Ensure RAC packages are within the same range across project",
      "policy": "sameRange"
    },
    {
      "dependencies": ["@types/node"],
      "label": "Ensure node types match engine version",
      "pinVersion": "^22"
    }
  ]
}
