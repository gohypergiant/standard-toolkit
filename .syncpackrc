{
  "$schema": "./node_modules/syncpack/dist/schema.json",
  "dependencyTypes": [
    "dev",
    "prod",
    "peer",
    "overrides"
  ],
  "source": [
    "package.json",
    "packages/*/package.json",
    "tooling/*/package.json"
  ],
  "semverGroups": [
    {
      "range": "^",
      "dependencies": ["**"],
      "packages": ["**"]
    }
  ],
  "versionGroups": [
    {
      "label": "Use * for local packages",
      "dependencies": [
        "@hypergiant/**"
      ],
      "packages": [
        "**"
      ],
      "pinVersion": "workspace:*"
    }
  ],
  "sortFirst": [
    "name",
    "version",
    "private",
    "license",
    "repository",
    "type",
    "files",
    "main",
    "module",
    "source",
    "types",
    "exports",
    "workspaces",
    "scripts",
    "overrides",
    "peerDependencies",
    "devDependencies",
    "dependencies"
  ]
}
