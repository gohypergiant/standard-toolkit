{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules",
    "**/*.bench.ts",
    "**/*.test.ts",
    "**/*.test-d.ts",
    "**/rspress.config.ts"
  ],
  "extends": "@accelint/typescript-config/tsc/dom/library",
  "include": [
    "../../packages/constants",
    "../../packages/converters",
    "../../packages/core",
    "../../packages/design-system",
    "../../packages/formatters",
    "../../packages/geo",
    "../../packages/math",
    "../../packages/predicates",
    "../../packages/temporal",
    "../../packages/web-worker",
    "../../packages/websocket",
    "docs",
    "rspress.config.ts",
    "theme"
  ],
  "mdx": {
    "checkMdx": true
  }
}
