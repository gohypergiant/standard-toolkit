{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@accelint/typescript-config/tsc/dom/library",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/features/hero/hero/.visual.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.bench.ts",
    "**/*.test.ts",
    "**/*.test-d.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["@testing-library/jest-dom"]
  }
}
