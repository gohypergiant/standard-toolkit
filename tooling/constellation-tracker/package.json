{
  "name": "@accelint/constellation-tracker",
  "description": "A tool used to keep a project's catalog-info.yaml file up to date for use in Constellation.",
  "version": "1.0.2",
  "author": "https://hypergiant.com",
  "$schema": "https://json.schemastore.org/package",
  "bin": {
    "constellation-tracker": "./dist/main.mjs"
  },
  "dependencies": {
    "ansis": "^4.0.0",
    "commander": "^14.0.0",
    "globby": "^14.1.0",
    "ora": "^8.2.0",
    "radash": "^12.1.1",
    "true-myth": "^9.0.1",
    "typescript": "^5.9.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@types/node": "^22",
    "tsdown": "^0.18.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "exports": {
    "./collect-dependencies": "./dist/collect-dependencies.mjs",
    "./get-catalog-info": "./dist/get-catalog-info.mjs",
    "./log-messages": "./dist/log-messages.mjs",
    "./main": "./dist/main.mjs",
    "./utils/catalog-info-template": "./dist/utils/catalog-info-template.mjs",
    "./utils/generate-catalog-info": "./dist/utils/generate-catalog-info.mjs",
    "./utils/save-catalog-info": "./dist/utils/save-catalog-info.mjs",
    "./utils/types": "./dist/utils/types.mjs",
    "./validate-input": "./dist/validate-input.mjs",
    "./validate-package": "./dist/validate-package.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "license": "Apache-2.0",
  "owner": "default/pathfinder",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "scripts": {
    "constellation-tracker": "node ./dist/main.mjs",
    "format": "pnpm biome format . --write --verbose",
    "format:check": "pnpm biome format . --verbose",
    "license": "pnpm zx ../../scripts/license.mjs",
    "lint": "pnpm biome lint . --verbose",
    "lint:package": "pnpm publint",
    "pre-build": "pnpm tsdown",
    "prepare": "pnpm run pre-build",
    "test": "pnpm vitest --dir=test",
    "test:coverage": "pnpm vitest --dir=test --coverage"
  },
  "sideEffects": false,
  "subPath": "tooling/constellation-tracker",
  "title": "Constellation Tracker",
  "type": "module"
}
