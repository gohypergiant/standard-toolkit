{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/create-package",
  "author": "https://hypergiant.com",
  "version": "0.0.0",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "scripts": {
    "clean": "pnpm run clean:pnpm && pnpm run clean:deps",
    "clean:deps": "pnpm exec rimraf node_modules",
    "clean:pnpm": "pnpm rimraf pnpm-lock.yaml",
    "create-package": "pnpm exec tsx ./create-package.ts",
    "format": "pnpm biome format . --write",
    "lint": "pnpm biome lint"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.4",
    "ansis": "^4.0.0",
    "commander": "^14.0.0",
    "esbuild-plugin-file-path-extensions": "^2.1.3",
    "lodash": "^4.17.21",
    "ora": "^8.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.0",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "tsup": "8.5.0"
  },
  "bin": {
    "create_package": "./dist/main.js"
  },
  "packageManager": "pnpm@10.9.0",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
