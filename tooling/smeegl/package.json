{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/smeegl",
  "title": "Smeegl",
  "description": "A small, spreet-based spritesheet/texture package for use with Deck.gl.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "tooling/smeegl",
  "version": "0.3.3",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "default": "./dist/lib.js"
    }
  },
  "scripts": {
    "build": "pnpm tsc && pnpm license && pnpm format",
    "constellation-tracker": "constellation-tracker",
    "format": "pnpm biome format . --write",
    "license": "pnpm zx ../../scripts/license.mjs",
    "lint": "pnpm biome lint",
    "postinstall": "pnpm run build",
    "test": "pnpm vitest --dir=test"
  },
  "dependencies": {
    "ansis": "^4.0.0",
    "commander": "^14.0.0",
    "crc32-universal": "^1.0.1",
    "esbuild-plugin-file-path-extensions": "^2.1.3",
    "globby": "^14.1.0",
    "inquirer": "^12.6.1",
    "lodash": "^4.17.21",
    "ora": "^8.2.0",
    "true-myth": "^9.0.1",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.0",
    "tsup": "8.5.0",
    "vitest": "^2.1.9"
  },
  "bin": {
    "smeegl": "./dist/main.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
