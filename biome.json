{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": [
    "@accelint/biome-config/analyzer",
    "@accelint/biome-config/formatter",
    "@accelint/biome-config/linter"
  ],
  "files": {
    "include": ["**/*.js", "**/*.mjs", "**/*.ts", "**/*.tsx", "**/*.json"],
    "ignore": [
      "node_modules",
      ".turbo",
      "dist",
      "build",
      "coverage",
      ".next",
      "storybook-static"
    ]
  },
  "overrides": [
    {
      "include": ["**"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": {
              "level": "error",
              "options": {
                "strictCase": false,
                "requireAscii": true,
                "conventions": [
                  {
                    "selector": {
                      "kind": "objectLiteralMember"
                    },
                    "formats": ["PascalCase", "camelCase"]
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "include": ["apps/docs/**"],
      "ignore": [".docusaurus"]
    },
    {
      "include": ["apps/next/**"],
      "ignore": [".next"]
    },
    {
      "include": ["design-toolkit/icons/**"],
      "linter": {
        "rules": {
          "a11y": {
            "noSvgWithoutTitle": "off"
          },
          "style": {
            "useNamingConvention": {
              "level": "error",
              "options": {
                "strictCase": false,
                "requireAscii": true
              }
            }
          }
        }
      }
    },
    {
      "include": ["packages/design-system/**", "design-toolkit/components/**"],
      "linter": {
        "rules": {
          "style": {
            "noParameterAssign": {
              "level": "warn"
            }
          },
          "nursery": {
            "useSortedClasses": {
              "level": "error",
              "fix": "safe",
              "options": {
                "attributes": ["classList"],
                "functions": ["clsx", "cn", "cva", "tv", "tw", "twMerge"]
              }
            }
          }
        }
      }
    }
  ]
}
