{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@accelint/typescript-config/tsc/dom/library",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "^storybook/*": ["./.storybook/*"]
    },
    "rootDir": "./",
    "types": ["@testing-library/jest-dom", "node"]
  },
  "exclude": [
    "node_modules",
    "**/*.bench.ts",
    "**/*.test.ts",
    "**/*.test-d.ts"
  ],
  "include": ["./src", "./.storybook/**/*"]
}
