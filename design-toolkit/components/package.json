    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "radashi": "^12.6.2",
    "react": "19.0.0",
    "react-aria-components": "1.12.1",
    "react-dom": "19.0.0",
    "react-querybuilder": "8.10.0",
    "storybook": "^8.6.14",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.0.1",
    "tailwindcss": "^4.1.11",
    "tinyglobby": "^0.2.15",
    "tsup": "8.5.0",
    "type-fest": "^4.41.0",
    "typescript": "5.8.3",
