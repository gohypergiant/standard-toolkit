{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/design-toolkit",
  "title": "Design Toolkit",
  "description": "An open-source component library to serve as part of the entire ecosystem of UX for Accelint.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "design-tk",
    "tooling",
    "ui"
  ],
  "subPath": "design-toolkit/components",
  "version": "6.0.0",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./*": {
      "import": {
        "types": "./dist/components/*/index.d.ts",
        "default": "./dist/components/*/index.js"
      },
      "default": "./dist/components/*/index.js"
    },
    "./query-builder": {
      "import": {
        "types": "./dist/components/query-builder/index.d.ts",
        "default": "./dist/components/query-builder/index.js"
      },
      "default": "./dist/components/query-builder/index.js"
    },
    "./styles": {
      "import": {
        "default": "./dist/index.css"
      },
      "default": "./dist/index.css"
    },
    "./utils": {
      "import": {
        "types": "./dist/lib/utils.d.ts",
        "default": "./dist/lib/utils.js"
      },
      "default": "./dist/lib/utils.js"
    }
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build-storybook": "pnpm storybook build",
    "build:css": "pnpm tailwindcss -i ./src/index.css -o ./dist/styles.css",
    "build": "pnpm generate && pnpm license && pnpm format && tsup && pnpm build:css",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "format": "pnpm biome format . --write",
    "gen:tokens": "pnpm zx scripts/generate-tokens.mjs",
    "gen:variants": "node scripts/generate-variants.mjs",
    "generate": "pnpm gen:tokens && pnpm gen:variants",
    "index": "pnpm zx ../../scripts/indexer.mjs design-toolkit/components",
    "license:tokens": "pnpm zx ../../scripts/license.mjs --files ./src/tokens",
    "license:variants": "pnpm zx ../../scripts/license.mjs --files ./src/variants",
    "license": "pnpm license:tokens && pnpm license:variants",
    "lint": "pnpm biome lint",
    "preview:docs": "pnpm storybook dev --docs -p 6006",
    "preview": "pnpm storybook dev -p 6006",
    "temp:token-migration": "pnpm zx scripts/token-migration.mjs",
    "test:watch": "pnpm vitest --dir=src --watch",
    "test": "pnpm vitest --dir=src"
  },
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/bus": "workspace:*",
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/core": "workspace:*",
    "@accelint/icons": "workspace:*",
    "@accelint/temporal": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@fontsource-variable/roboto-flex": "^5.2.8",
    "@fontsource-variable/roboto-mono": "^5.2.8",
    "@internationalized/date": "^3.10.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@react-aria/dnd": "^3.10.1",
    "@react-aria/interactions": "^3.25.3",
    "@react-aria/overlays": "^3.29.1",
    "@react-aria/ssr": "^3.9.10",
    "@react-aria/toast": "^3.0.7",
    "@react-aria/utils": "^3.30.0",
    "@react-stately/color": "^3.9.0",
    "@react-stately/datepicker": "^3.15.2",
    "@react-stately/toast": "^3.1.2",
    "@react-stately/utils": "^3.10.8",
    "@react-types/overlays": "^3.9.0",
    "@react-types/shared": "^3.31.0",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-storysource": "^8.6.14",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/builder-vite": "^8.6.14",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/theming": "^8.6.14",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-table": "^8.21.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
