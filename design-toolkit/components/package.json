{
  "name": "@accelint/design-toolkit",
  "version": "0.1.0",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": ["dist/**"],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./styles": {
      "import": {
        "default": "./dist/styles.css"
      },
      "default": "./dist/styles.css"
    }
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsup && pnpm build:css",
    "build:css": "npx @tailwindcss/cli -i ./src/index.css -o ./dist/styles.css",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs design-toolkit/components",
    "lint": "pnpm biome lint",
    "preview": "storybook dev -p 6006",
    "test": "pnpm vitest --dir=src",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.4",
    "@tailwindcss/vite": "^4.1.3",
    "clsx": "^2.1.1",
    "cva": "npm:class-variance-authority@^0.7.1",
    "react": "^19.0.0",
    "react-aria-components": "^1.7.1",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tailwindcss-react-aria-components": "^2.0.0"
  },
  "devDependencies": {
    "@accelint/biome-config": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@fontsource/roboto-flex": "5.1.0",
    "@fontsource/roboto-mono": "5.1.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@tailwindcss/cli": "4.1.4",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.5.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "10.4.20",
    "esbuild-plugin-file-path-extensions": "2.1.3",
    "jsdom": "25.0.1",
    "postcss": "8.4.47",
    "storybook": "^8.6.12",
    "tsup": "8.3.0",
    "typescript": "~5.7.2",
    "vite": "5.4.9",
    "vitest": "2.1.3"
  },
  "$schema": "https://json.schemastore.org/package",
  "author": "https://hypergiant.com",
  "publishConfig": {
    "access": "public"
  }
}
